<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/radius_12"
        android:elevation="2dp"
        android:layout_margin="8dp"
        android:padding="12dp"
        android:stateListAnimator="@animator/item_press"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_ph_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/oval_dr"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderit"
            android:textColor="#303030"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/user_ph_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Итоги подводим 27 декабря. Призы будут разыграны в одном конкурсе по порядку:
первому победителю Xiaomi 12T, второму Xiaomi 12 Lite, третьему Redmi Buds 3, четвертому Xiaomi Smart Band 7."
            android:textColor="#424242"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_ph_view" />

        <ImageView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/radius_12"
            android:backgroundTint="#F3F3F3"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/message_view"
            app:layout_constraintTop_toBottomOf="@+id/message_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>